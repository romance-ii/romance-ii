package gamesys{	import flash.display.MovieClip;	import math.Vect;		public class GameCursor extends MovieClip	{		public var down:Boolean;		public var taken:GameCursorPickup;		var speed:int = 5;				var vel:Vect = new Vect(0,0);		var pos:Vect = new Vect(400,225);		public function enterFrame(gR:MovieClip):void		{			if(MovieClip(root).mouse.moved){				pos.x=gR.mouseX;				pos.y=gR.mouseY;			}else{				if(MovieClip(root).kCont.keyz.left){					vel.x-=speed;				}				if(MovieClip(root).kCont.keyz.right){					vel.x+=speed;				}				if(MovieClip(root).kCont.keyz.up){					vel.y-=speed;				}				if(MovieClip(root).kCont.keyz.down){					vel.y+=speed;				}				pos.x+=vel.x;				pos.y+=vel.y;				vel.mult(0.8);			}			if(pos.x<0){pos.x=0;}			if(pos.y<0){pos.y=0;}			if(pos.x>800){pos.x=800;}			if(pos.y>450){pos.y=450;}						x = (x+pos.x)/2;			y = (y+pos.y)/2;						down = MovieClip(root).mouse.down||MovieClip(root).kCont.keyz.space;			if(!down){				taken=null;			}		}	}}