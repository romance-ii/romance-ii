package gamesys{	import flash.display.MovieClip;	public class GameCursorPickup extends MovieClip	{		public var held:Boolean;		var xx:int;		var yy:int;		public function enterFrame(gR:MovieClip):void		{			if( (gR.mawz.taken==null || gR.mawz.taken==this )			   && gR.mawz.down && (held||this.hitTestPoint(gR.mawz.x,gR.mawz.y,true)) ){				if(!held){					xx = x-gR.mawz.x;					yy = y-gR.mawz.y;					held=true;					gR.mawz.taken=this;				}				x=gR.mawz.x+xx;				y=gR.mawz.y+yy;			}else{				held=false;			}		}	}}