package gamesys{	import flash.display.MovieClip;	public class Camera	{		var cuts:MovieClip;		public function Camera(root:MovieClip):void		{			cuts = root;		}				public function enterFrame(mc:MovieClip)		{			if(mc!=null){				var tmp:int;				var tmp2:int;								var scale:Number = mc.scaleX;				var x:int = mc.x;				var y:int = mc.y;				var rotation:int = mc.rotation;								cuts.rotation = -rotation;				cuts.scaleX = cuts.scaleY = 1/scale;								var rotationRadian:Number = cuts.rotation*Math.PI/180;				cuts.x = 400 - Math.cos(rotationRadian)*(x*cuts.scaleX) + Math.sin(rotationRadian)*(y*cuts.scaleY);				cuts.y = 225 - Math.sin(rotationRadian)*(x*cuts.scaleX) - Math.cos(rotationRadian)*(y*cuts.scaleY);				}		}	}}