package item{	import flash.display.MovieClip;	import flash.geom.Point;	public class GameButtonRelease extends GameButton	{		public var doStuffRelease:Function;		public var index:int;		public function GameButtonRelease(f:Function,ff:Function,mClip:MovieClip,gR:MovieClip,i:int=0)		{			super(f,mClip,gR);			doStuffRelease = ff;			index = i;		}		var justReleased:Boolean = true;		override public function enterFrame():void		{			super.enterFrame();			if( hitGuy() ){				justReleased = false;			}else if(!justReleased){				justReleased = true;				doStuffRelease();			}		}				override protected function hitGuy():Boolean{			stagePoint = gameRoot.localToGlobal(new Point(x,y));			return gameRoot.gCont.hitTestPoint(stagePoint.x,stagePoint.y,true);		}	}}