package item{	import flash.display.MovieClip;	import particle.Particle;	import flash.geom.Point;		public class BPPelican extends MovieClip implements Particle	{		var mc:MovieClip;		var gameRoot:MovieClip;		public function BPPelican(mClip:MovieClip,gR:MovieClip):void		{			x = mClip.x;			y = mClip.y;			rotation = mClip.rotation;						mc = new Item_BPPelican();			addChild(mc);			gameRoot = gR;		}		public function enterFrame():void		{			if( hitGuy() && !gameRoot.gCont.kid(0).havePelican ){				removeChild(mc);				MovieClip(parent).kill(this);				gameRoot.gCont.kid(0).grabPelican();			}			with(mc){				if(currentFrame==totalFrames){					gotoAndStop(1);				}else{					nextFrame();				}			}		}				protected function hitGuy():Boolean{			for( var i:int = -1; i<=1; i++ ){				var stagePoint:Point = gameRoot.localToGlobal(new Point(x+i*20,y));				if( gameRoot.gCont.kid(0).hitTestPoint(stagePoint.x,stagePoint.y,true) ){					return true;				}			}			return false;		}	}}