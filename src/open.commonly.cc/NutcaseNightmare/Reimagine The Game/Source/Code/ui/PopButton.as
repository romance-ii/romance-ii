package ui{	import flash.display.MovieClip;	public class PopButton extends FunctButton	{		var ideal_scale:Number;		var orig_scale:Number;		public function PopButton(mClip:MovieClip,r:MovieClip,ff2:Function):void		{			ideal_scale = orig_scale = mClip.scaleX;			var f:Function = function():void{				ideal_scale = orig_scale*1.2;			};			var ff:Function = function():void{				ff2();				mc.scaleX = orig_scale*0.8;				mc.scaleY = mc.scaleX;			};			super(mClip,r,f,ff);		}				var rSpeed:Number = 0;		override public function enterFrame():void		{			ideal_scale = orig_scale;			super.enterFrame();			mc.scaleX = (ideal_scale+mc.scaleX)/2;			mc.scaleY = mc.scaleX;		}	}}