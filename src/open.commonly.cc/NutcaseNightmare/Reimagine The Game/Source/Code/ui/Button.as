package ui{	import flash.display.MovieClip;	import flash.geom.Point;	public class Button	{		var mc:MovieClip;		var callRoot:MovieClip;		public function Button(mClip:MovieClip,r:MovieClip):void		{			mc = mClip;			callRoot = r;			with(mc){				buttonMode = true;				useHandCursor = true;			}		}				var stagePoint:Point;		public function mouseIsOver():Boolean		{			stagePoint = mc.localToGlobal(new Point(mc.mouseX,mc.mouseY));			return ( mc.hitTestPoint(stagePoint.x,stagePoint.y,true) );		}				public function enterFrame():void{}	}}