package math{	import flash.display.DisplayObject;	public class PointMaker	{		static public function line(n:int,x1:int,y1:int,x2:int,y2:int):Array		{			var arr:Array = new Array();			var xDist:int = (x2-x1)/n;			var yDist:int = (y2-y1)/n;						for( var i:uint=0; i<n; i++ ){				arr.push(new Array(x1+xDist*i,y1+yDist*i));			}						return arr;		}		static public function circle(n:int,xx:int,yy:int,r:int,r1:int=0,r2:int=360):Array		{			var arr:Array = new Array();			var rrr:Number = r1*(Math.PI/180);			var rr:Number = (r2-r1)*(Math.PI/180)/n;						for( var i:uint=0; i<n; i++ ){				arr.push( new Array(xx+Math.cos(rrr+rr*i)*r,yy+Math.sin(rrr+rr*i)*r) );			}						return arr;		}		static public function dispLine(n:int,p0:DisplayObject,p1:DisplayObject):Array		{			return line(n,p0.x,p0.y,p1.x,p1.y);		}		static public function dispCircle(n:int,p:DisplayObject,r:int,r1:int=0,r2:int=360):Array		{			return circle(n,p.x,p.y,r,r1,r2);		}	}}