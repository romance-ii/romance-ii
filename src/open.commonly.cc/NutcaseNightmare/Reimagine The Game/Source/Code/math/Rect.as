package math{	public class Rect	{		var x1:int;		var y1:int;		var x2:int;		var y2:int;		public function Rect(args:Array):void		{			if( args[0] < args[2] ){				x1 = args[0];				x2 = args[2];			}else{				x1 = args[2];				x2 = args[0];			}			if( args[1] < args[3] ){				y1 = args[1];				y2 = args[3];			}else{				y1 = args[3];				y2 = args[1];			}		}		public function hit(px:int,py:int):Boolean		{			return ( px>x1 && px<x2 && py>y1 && py<y2 );		}		public function zero():void		{			x1 = x2 = y1 = y2 = 0;		}	}}