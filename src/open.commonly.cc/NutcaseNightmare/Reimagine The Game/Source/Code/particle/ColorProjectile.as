package particle{	import flash.display.MovieClip;	import flash.geom.ColorTransform;	import container.ColorOilParticleContainer;		public class ColorProjectile extends FluidProjectile	{		var color:uint;		public function ColorProjectile(gR:MovieClip,cnt:ColorOilParticleContainer,clr:uint,xx:int,yy:int,vx:int=0,vy:int=0):void		{			super(gR,xx,yy,vx,vy);			var CT:ColorTransform = new ColorTransform();			CT.color = clr;			mc.transform.colorTransform=CT;			cont = cnt;			color = clr;		}				var cont:ColorOilParticleContainer		override protected function splatter():void{			cont.addColor(x,y,gameRoot,color);			super.splatter();		}	}}