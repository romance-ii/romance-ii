package container{	import flash.display.MovieClip;	import flash.geom.Point;		public class InstakillContainer	{		var mc:MovieClip;		var gR:MovieClip;		public function InstakillContainer(mClip:MovieClip,gameRoot:MovieClip):void		{			mc = mClip;			gR = gameRoot;		}		public function enterFrame():void		{			if(hitGuy()){				hitHandler();			}		}		protected function hitHandler():void		{			var guy:MovieClip = MovieClip(gR.gCont.kid( gR.gCont.control ));			guy.hurt(guy.health);		}		protected function hitGuy():Boolean		{			var guy:MovieClip = MovieClip(gR.gCont.kid( gR.gCont.control ));			var stagePoint:Point = gR.localToGlobal(new Point(guy.x,guy.y));			return guy.visible && mc.hitTestPoint(stagePoint.x,stagePoint.y,true);		}	}}